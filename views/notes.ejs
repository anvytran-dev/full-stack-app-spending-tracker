<!doctype html>
<html>
<head>
    <title>Money Tracker</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3" id ="divNotesMain">

    <div class="col-sm-6" id ="divNotes">
      <section class ="secNotesMain">

        <section class ="secCreateNote">

              <h2>How much did you spend today?</h2>

            <% if (user.local.email) { %>

              <form action="/messages" method="POST" class ="formNote">

                <label for="todayDate">Date:</label>
                <input type="date" id="todayDate" name="date">

                <label for="itemBought">What did you buy?</label>
                <input type="text" id="itemBought" name="itemBought">

                <label for="amountSpent">How much did you spend?</label>
                <input type="text" id="amountSpent" name="amountSpent">

                <input type="text" value="<%= user.local.email %>" name="name" class="userEmail">

                <button type="submit">Submit</button>

                <input type="text" value="<%= user.local.email %>" name="name" placeholder="email" class ="userEmail">
        

              </form>

              <section>

                <h2>Check my spending</h2>
                
                <form action="/checkTotal" method="POST">

                  <label for="todayDate">Date:</label>
                  <input type="date" id="checkSpending" name="checkSpendingForDate">

                  <button type="submit">How much did I spend?</button>

                </form>

                <% if(date) { %>
                  <h3>Date: <%= date %> Total: $ <%= total %></h3>

                <% } %>
                

              </section>
        </section>

        <section class = "secNotes">
              <h3>Purchases</h3>
              <ul class="messages ulMessages">
              <% for(var i=0; i<messages.length; i++) {%>
                
                <li class="message liItems" data-noteId ='<%= messages[i]._id %>'>
    
                 
                  <span>Date: <%= new Date(messages[i].date).toISOString().split('T')[0] %></span>
                  <span>Item Bought:  <%= messages[i].itemBought%></span>
                  <span>Amount Spent: $ <%= messages[i].amountSpent %></span>

                 
    
                  <section class = "secIcons">
    
                    <span><i class="fa fa-edit"></i></span>
                    
                    <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                  
                    </section>
    
                </li>
              <% } %>
              </ul>
          </section>
        </section>
      </div>
        <% } %>

</div>
</div>
<script type="text/javascript" src="main.js"></script>
</body>
</html>
